<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false"
        android:state_enabled="true">

        <layer-list>
            <item
                android:top="5dp"
                android:bottom="5dp">
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/movie_normal_purple" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_pressed="true"
        android:state_enabled="true">

        <layer-list>
            <item
                android:top="5dp"
                android:bottom="5dp">

                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/movie_light_purple" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>