<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/movie_dark_purple</item>
    </style>

    <!-- ******* Loading Activity Views ******* -->
    <style name="LoadActViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoadTextViewBase" parent="LoadActViewBase">
        <item name="android:gravity">center</item>
    </style>

    <style name="MovieTitleTextView" parent="LoadTextViewBase">
        <item name="android:text">@string/movie_night_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:padding">@dimen/movie_title_padding</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="LoadingTextView" parent="LoadTextViewBase">
        <item name="android:text">@string/loading_text</item>
        <item name="android:textSize">@dimen/loading_text_size</item>
        <item name="android:textColor">@color/loading_text_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/loading_text_margin_top</item>
    </style>

    <style name="containerLayout" parent="LoadActViewBase">
        <item name="android:padding">@dimen/container_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/container_margin_bottom</item>
    </style>

    <!-- Logo Image View -->
    <style name="ImageViewBase" parent="LoadActViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/play_store</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:maxHeight">@dimen/logo_max_height</item>
        <item name="android:maxWidth">@dimen/logo_max_width</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- Search Movie Title -->
    <style name="SearchTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_title_text</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/search_title_top_margin</item>
    </style>

    <!-- Search Movie Table Layout -->
    <style name="TableLayoutView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/table_layout_top_margin</item>
        <item name="android:padding">@dimen/table_layout_padding</item>
    </style>

    <style name="TableRowTextView">
        <item name="android:layout_column">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>

    <style name="GenreTextView" parent="TableRowTextView">
        <item name="android:text">@string/genre_text</item>
    </style>

    <style name="ReleaseDateTextView" parent="TableRowTextView">
        <item name="android:text">@string/release_date</item>
    </style>

    <style name="VotesCountTextView" parent="TableRowTextView">
        <item name="android:text">@string/vote_count_text</item>
    </style>

    <style name="RatingTextView" parent="TableRowTextView">
        <item name="android:text">@string/rating_text</item>
    </style>

    <style name="TableRowInputView">
        <item name="android:layout_column">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">@dimen/input_view_left_margin</item>
    </style>

    <style name="InputViewWithText" parent="TableRowInputView">
        <item name="android:paddingLeft">@dimen/input_view_text_left_pad</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/input_view_text_size</item>
        <item name="android:textColorHint">@color/movie_light_purple</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="GenreSpinnerView" parent="TableRowInputView">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="DatePickerButtonView" parent="InputViewWithText">
        <item name="android:hint">@string/empty_date_picker_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:background">@drawable/release_date_button_drawable</item>
    </style>

    <style name="VoteCountEditTextView" parent="InputViewWithText">
        <item name="android:hint">@string/vote_count_hint_text</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="RatingSeekBarView" parent="TableRowInputView">
        <item name="android:layout_weight">2.8</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/no_margin</item>
    </style>

    <style name="SeekBarResultTextView">
        <item name="android:layout_column">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>

    <style name="FindMoviesButtonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/movie_button_background</item>
        <item name="android:text">@string/find_movies_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_margin">@dimen/movie_button_margin</item>
        <item name="android:textSize">@dimen/movie_button_text_size</item>
    </style>

    <!-- Underline View -->
    <style name="UnderlineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/underline_view_height</item>
        <item name="android:background">@color/movie_dark_purple</item>
        <item name="android:layout_marginLeft">@dimen/underline_view_left_margin</item>
        <item name="android:layout_marginRight">@dimen/underline_view_right_margin</item>
        <item name="android:layout_marginTop">@dimen/underline_view_top_margin</item>
    </style>
</resources>
