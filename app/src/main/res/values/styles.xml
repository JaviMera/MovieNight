<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/movie_extra_dark_color</item>
        <item name="colorPrimaryDark">@color/movie_extra_dark_color</item>
        <item name="colorAccent">@color/movie_dark_purple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Logo Image View -->
    <style name="ImageViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/play_store</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:maxHeight">@dimen/logo_max_height</item>
        <item name="android:maxWidth">@dimen/logo_max_width</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- Search Movie Title -->
    <style name="SearchTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_title_text</item>
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/search_title_padding</item>
    </style>

    <style name="MoviesResultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/movies_result_text</item>
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/search_title_padding</item>
    </style>

    <style name="PopularMoviesTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/popular_movies_text</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/top_rated_movies_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopRatedMoviesTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/top_rated_movies_text</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/top_rated_movies_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FindMoviesButtonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/movie_button_background</item>
        <item name="android:text">@string/find_movies_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_margin">@dimen/movie_button_margin</item>
        <item name="android:textSize">@dimen/movie_button_text_size</item>
    </style>

    <!-- Underline View -->
    <style name="UnderlineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/underline_view_height</item>
        <item name="android:background">@color/movie_dark_purple</item>
        <item name="android:layout_marginLeft">@dimen/underline_view_left_margin</item>
        <item name="android:layout_marginRight">@dimen/underline_view_right_margin</item>
        <item name="android:layout_marginTop">@dimen/underline_view_top_margin</item>
    </style>

    <style name="DatePickerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="DialogButtonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/movie_button_background</item>
        <item name="android:layout_margin">@dimen/dialog_button_margin</item>
        <item name="android:text">@string/dialog_button_text</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>

    <!-- Dialog common Styles -->
    <style name="DialogTextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/dialog_title_text_view_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog Load Styles -->
    <style name="DialogLoadTitleTextView" parent="DialogTextViewTitle">
        <item name="android:text">@string/dialog_load_title_text</item>
        <item name="android:textSize">@dimen/dialog_title_text_view_size</item>
        <item name="android:layout_margin">@dimen/dialog_load_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogLoadProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:indeterminateDrawable">@drawable/progress_bar_drawable</item>-->
    </style>

    <!-- Date Range Dialog Styles -->
    <style name="DateRangeDialogChildContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DateRangeTextView" parent="DialogTextViewTitle">
        <item name="android:paddingLeft">@dimen/date_range_dialog_text_pad</item>
        <item name="android:layout_marginTop">@dimen/date_range_dialog_text_pad</item>
    </style>

    <style name="StartDateRangeTextView" parent="DateRangeTextView">
        <item name="android:text">@string/start_release_date_text</item>
    </style>

    <style name="EndDateRangeTextView" parent="DateRangeTextView">
        <item name="android:text">@string/end_release_date_text</item>
    </style>

    <!-- Rate Dialog Styles -->
    <style name="RatingTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/rating_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RatingScoreTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/rate_dialog_score_text_view_text</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
    </style>

    <style name="RateDialogRatingBarView" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/rate_dialog_rating_bar_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:rating">0</item>
        <item name="android:numStars">10</item>
        <item name="android:isIndicator">false</item>
        <item name="android:scaleX">1.8</item>
        <item name="android:scaleY">2</item>
    </style>

    <!-- Vote Count Dialog Styles -->
    <style name="VotesCountDialogTitleTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/vote_count_text</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">@dimen/vote_count_dialog_margin</item>
    </style>

    <style name="VoteCountDialogEditTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/input_view_text_left_pad</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:textSize">@dimen/input_view_text_size</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="RecyclerViewItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/recycler_view_item_pad</item>
    </style>

    <style name="FilterItemTitleTextView" parent="RecyclerViewItemTextView">
        <item name="android:textSize">@dimen/filter_item_title_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>

    <style name="FilterItemValueTextView" parent="RecyclerViewItemTextView">
        <item name="android:textSize">@dimen/recycler_item_value_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:layout_marginLeft">@dimen/filter_item_value_margin</item>
    </style>

    <style name="MovieItemTitleTextView" parent="RecyclerViewItemTextView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
    </style>

    <!-- Movie Dialog Styles -->
    <style name="MovieTextViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextView" parent="MovieTextViewBase">
        <item name="android:background">@color/movie_extra_dark_color</item>
        <item name="android:textColor">@color/movie_white_color</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:padding">@dimen/movie_text_view_pad</item>
    </style>

    <style name="OverviewTextView" parent="MovieTextViewBase">
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:textSize">@dimen/movie_overview_text_size</item>
        <item name="android:padding">@dimen/movie_text_view_pad</item>
    </style>

    <style name="MovieRatingTextView" parent="MovieTextViewBase">
        <item name="android:textSize">@dimen/movie_rating_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:paddingLeft">@dimen/movie_text_view_pad</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="MovieVoteCountTextView" parent="MovieTextViewBase">
        <item name="android:textSize">@dimen/movie_vote_count_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:paddingLeft">@dimen/movie_text_view_pad</item>
        <item name="android:paddingTop">@dimen/movie_text_view_pad</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="MovieGenreTitleTextView" parent="MovieTextViewBase">
        <item name="android:text">@string/movie_genre_title_text</item>
        <item name="android:textSize">@dimen/movie_genre_title_text_size</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:paddingLeft">@dimen/movie_text_view_pad</item>
    </style>

    <style name="MovieReleaseDateTitleTextView" parent="MovieTextViewBase">
        <item name="android:text">@string/movie_release_date_title_text</item>
        <item name="android:textSize">@dimen/movie_genre_title_text_size</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:paddingLeft">@dimen/movie_text_view_pad</item>
    </style>

    <style name="MovieGenreTextView" parent="MovieTextViewBase">
        <item name="android:textSize">@dimen/movie_genre_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:padding">@dimen/movie_text_view_pad</item>
    </style>

    <style name="MovieReleaseDateTextView" parent="MovieTextViewBase">
        <item name="android:textSize">@dimen/movie_genre_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:padding">@dimen/movie_text_view_pad</item>
    </style>

    <style name="LineSeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_separator_height</item>
        <item name="android:background">@color/movie_dark_purple</item>
        <item name="android:layout_margin">@dimen/line_separator_margin</item>
    </style>

    <style name="MovieDialogImageBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="MoviePosterImageView" parent="MovieDialogImageBase">
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="MovieRateImageView" parent="MovieDialogImageBase">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/rating_star</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>
