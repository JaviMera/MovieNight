<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/movie_extra_dark_color</item>
        <item name="colorPrimaryDark">@color/movie_extra_dark_color</item>
        <item name="colorAccent">@color/movie_dark_purple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Logo Image View -->
    <style name="ImageViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/play_store</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:maxHeight">@dimen/logo_max_height</item>
        <item name="android:maxWidth">@dimen/logo_max_width</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- Search Movie Title -->

    <style name="PopularMoviesTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/popular_films_text</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/top_rated_films_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DatePickerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="DialogButtonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/movie_button_background</item>
        <item name="android:layout_margin">@dimen/dialog_button_margin</item>
        <item name="android:text">@string/dialog_button_text</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
    </style>

    <!-- Dialog common Styles -->
    <style name="DialogTextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:textSize">@dimen/dialog_title_text_view_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog Load Styles -->
    <style name="DialogLoadTitleTextView" parent="DialogTextViewTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/dialog_title_text_view_size</item>
        <item name="android:layout_margin">@dimen/dialog_load_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>

    <style name="DialogLoadProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Date Range Dialog Styles -->
    <style name="DateRangeDialogChildContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DateRangeTextView" parent="DialogTextViewTitle">
        <item name="android:paddingLeft">@dimen/date_range_dialog_text_pad</item>
        <item name="android:layout_marginTop">@dimen/date_range_dialog_text_pad</item>
    </style>

    <style name="StartDateRangeTextView" parent="DateRangeTextView">
        <item name="android:text">@string/start_release_date_text</item>
    </style>

    <style name="EndDateRangeTextView" parent="DateRangeTextView">
        <item name="android:text">@string/end_release_date_text</item>
    </style>

    <!-- Rate Dialog Styles -->
    <style name="RatingTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/rating_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RatingScoreTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/rate_dialog_score_text_view_text</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
    </style>

    <style name="RateDialogRatingBarView" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/rate_dialog_rating_bar_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:rating">0</item>
        <item name="android:numStars">10</item>
        <item name="android:isIndicator">false</item>
        <item name="android:scaleX">1.8</item>
        <item name="android:scaleY">2</item>
    </style>

    <!-- Vote Count Dialog Styles -->
    <style name="VotesCountDialogTitleTextView" parent="DialogTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/vote_count_text</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">@dimen/vote_count_dialog_margin</item>
    </style>

    <style name="VoteCountDialogEditTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/input_view_text_left_pad</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:textSize">@dimen/input_view_text_size</item>
        <item name="android:inputType">number</item>
    </style>

    <!-- Film Dialog Styles -->
    <style name="FilmTextViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilmTitleTextView" parent="FilmTextViewBase">
        <item name="android:background">@color/movie_extra_dark_color</item>
        <item name="android:textColor">@color/movie_white_color</item>
        <item name="android:textSize">@dimen/film_title_text_size</item>
        <item name="android:padding">@dimen/film_text_view_pad</item>
    </style>

    <style name="FilmOverviewTextView" parent="FilmTextViewBase">
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:textSize">@dimen/film_overview_text_size</item>
        <item name="android:padding">@dimen/film_text_view_pad</item>
    </style>

    <style name="FilmRatingTextView" parent="FilmTextViewBase">
        <item name="android:textSize">@dimen/film_rating_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:paddingLeft">@dimen/film_text_view_pad</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="FilmVoteCountTextView" parent="FilmTextViewBase">
        <item name="android:textSize">@dimen/film_vote_count_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:paddingLeft">@dimen/film_text_view_pad</item>
        <item name="android:paddingTop">@dimen/film_text_view_pad</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="FilmGenreTitleTextView" parent="FilmTextViewBase">
        <item name="android:text">@string/film_genre_title_text</item>
        <item name="android:textSize">@dimen/film_genre_title_text_size</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:paddingLeft">@dimen/film_text_view_pad</item>
    </style>

    <style name="FilmReleaseDateTitleTextView" parent="FilmTextViewBase">
        <item name="android:text">@string/film_release_date_title_text</item>
        <item name="android:textSize">@dimen/film_genre_title_text_size</item>
        <item name="android:textColor">@color/movie_extra_dark_color</item>
        <item name="android:paddingLeft">@dimen/film_text_view_pad</item>
    </style>

    <style name="FilmGenreTextView" parent="FilmTextViewBase">
        <item name="android:textSize">@dimen/film_genre_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:padding">@dimen/film_text_view_pad</item>
    </style>

    <style name="FilmReleaseDateTextView" parent="FilmTextViewBase">
        <item name="android:textSize">@dimen/film_genre_text_size</item>
        <item name="android:textColor">@color/movie_normal_purple</item>
        <item name="android:padding">@dimen/film_text_view_pad</item>
    </style>

    <style name="LineSeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_separator_height</item>
        <item name="android:background">@color/movie_dark_purple</item>
        <item name="android:layout_margin">@dimen/line_separator_margin</item>
    </style>

    <style name="FilmDialogImageBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="FilmPosterImageView" parent="FilmDialogImageBase">
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="FilmRateImageView" parent="FilmDialogImageBase">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/rating_star</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Load Dialog Styles -->
    <style name="LoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Filter Recycler Item Styles -->
    <style name="FilterItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/recycler_item_text_size</item>
        <item name="android:layout_marginLeft">@dimen/recycler_item_margin</item>
        <item name="android:padding">@dimen/recycler_item_pad</item>
        <item name="android:background">@drawable/filter_item_grid_layout</item>
        <item name="android:textColor">@color/movie_white_color</item>
    </style>

    <!-- Genre Recycler Styles -->
    <style name="GenreRecyclerViewBase">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GenreRecyclerItemTextView" parent="GenreRecyclerViewBase">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/genre_recycler_item_pad</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textSize">@dimen/genre_recycler_item_text_size</item>
    </style>

    <style name="GenreRecyclerItemCheckBox" parent="GenreRecyclerViewBase">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GenreRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginBottom">@dimen/genre_recycler_margin</item>
    </style>

    <!-- Nav Drawer Styles -->

    <style name="NavDrawerHeaderImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/launcher</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="NavDrawerHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/nav_drawer_header_text</item>
        <item name="android:textColor">@color/movie_white_color</item>
        <item name="android:textSize">@dimen/nav_drawer_header_text_size</item>
        <item name="android:paddingTop">@dimen/nav_drawer_header_pad</item>
        <item name="android:paddingLeft">@dimen/nav_drawer_header_pad</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Sort Recycler Styles -->
    <style name="SortRecyclerItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sort_recycler_item_pad</item>
        <item name="android:textSize">@dimen/sort_recycler_item_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:background">@drawable/sort_item_background</item>
    </style>
</resources>
