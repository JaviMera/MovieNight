<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/movie_dark_purple</item>
    </style>

    <!-- ******* Loading Activity Views ******* -->
    <style name="LoadActViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoadTextViewBase" parent="LoadActViewBase">
        <item name="android:gravity">center</item>
    </style>

    <style name="MovieTitleTextView" parent="LoadTextViewBase">
        <item name="android:text">@string/movie_night_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:padding">@dimen/movie_title_padding</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="LoadingTextView" parent="LoadTextViewBase">
        <item name="android:text">@string/loading_text</item>
        <item name="android:textSize">@dimen/loading_text_size</item>
        <item name="android:textColor">@color/loading_text_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/loading_text_margin_top</item>
    </style>

    <style name="containerLayout" parent="LoadActViewBase">
        <item name="android:padding">@dimen/container_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/container_margin_bottom</item>
    </style>

    <!-- Logo Image View -->
    <style name="ImageViewBase" parent="LoadActViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/play_store</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:maxHeight">@dimen/logo_max_height</item>
        <item name="android:maxWidth">@dimen/logo_max_width</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- ***** Search Activity Views ***** -->
    <style name="SearchActRowColOne">
        <item name="android:layout_column">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/search_criteria_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/search_criteria_text_pad_right</item>
    </style>

    <style name="SearchActRowColTwo">
        <item name="android:layout_column">1</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginLeft">@dimen/col_two_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/col_two_view_margin_right</item>
    </style>

    <style name="EditTextViewBase" parent="SearchActRowColTwo">
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/movie_light_purple</item>
        <item name="android:textSize">@dimen/col_two_view_text_size</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
    </style>
    <style name="ReleaseDateTextView" parent="SearchActRowColOne">
        <item name="android:text">@string/release_date</item>
    </style>

    <style name="ReleaseDateEditTextView" parent="EditTextViewBase">
        <item name="android:inputType">date</item>
        <item name="android:hint">@string/empty_date_picker_text</item>
    </style>

    <style name="RatingTextView" parent="SearchActRowColOne">
        <item name="android:text">@string/rating_text</item>
    </style>

    <style name="RatingBarView" parent="SearchActRowColTwo">
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
    </style>

    <style name="VoteCountTextView" parent="SearchActRowColOne">
        <item name="android:text">@string/vote_count_text</item>
    </style>

    <style name="VoteCountEditTextView" parent="EditTextViewBase">
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/vote_count_hint_text</item>
    </style>

    <style name="GenreTextView" parent="SearchActRowColOne">
        <item name="android:text">@string/genre_text</item>
    </style>

    <style name="GenreSpinnerView" parent="SearchActRowColTwo">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="FindMoviesButtonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/movie_button_background</item>
        <item name="android:text">@string/find_movies_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movie_dark_purple</item>
        <item name="android:layout_margin">@dimen/movie_button_margin</item>
        <item name="android:textSize">@dimen/movie_button_text_size</item>
    </style>
</resources>
