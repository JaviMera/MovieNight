<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">

    <RelativeLayout
        android:id="@+id/logoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" >

        <include
            layout="@layout/logo_layout" />

    </RelativeLayout>

    <TextView
        android:id="@+id/searchTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoLayout"
        android:text="@string/search_movies_text"
        android:textStyle="italic|bold"
        android:textSize="20sp"
        android:textColor="@color/movie_dark_purple"
        android:gravity="center"
        android:layout_marginTop="25dp"/>

    <View
        android:id="@+id/lineSeparatorView"
        android:layout_below="@+id/searchTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/movie_dark_purple"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TableLayout
        android:id="@+id/searchCriteriaLayout"
        android:layout_below="@+id/lineSeparatorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TableRow
            android:layout_marginTop="@dimen/search_act_row_margin">

            <TextView
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/genre_text"
                android:textColor="@color/movie_dark_purple"
                android:layout_gravity="center"
                android:gravity="right|center"/>

            <Spinner
                android:id="@+id/genreSpinnerView"
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="10dp">

            </Spinner>

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/search_act_row_margin">

            <TextView
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/release_date"
                android:textColor="@color/movie_dark_purple"
                android:layout_gravity="center"
                android:gravity="right|center"/>

            <Button
                android:id="@+id/datePickerButtonView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:hint="@string/empty_date_picker_text"
                android:textColorHint="@color/movie_light_purple"
                android:textColor="@color/movie_dark_purple"
                android:textSize="13sp"
                android:textStyle="italic"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:scaleType="fitEnd"
                android:background="@drawable/release_date_button_drawable"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/search_act_row_margin">

            <TextView
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vote_count_text"
                android:textColor="@color/movie_dark_purple"
                android:layout_gravity="center"
                android:gravity="right|center"/>

            <EditText
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/vote_count_hint_text"
                android:textColorHint="@color/movie_light_purple"
                android:textSize="15sp"
                android:textStyle="italic"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp">

            </EditText>
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/search_act_row_margin">

            <TextView
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rating_text"
                android:textColor="@color/movie_dark_purple"
                android:layout_gravity="center"
                android:gravity="right|center"/>

            <SeekBar
                android:id="@+id/seekBarView"
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"/>

            <TextView
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                tools:text="10"
                android:gravity="center|right"
                android:textColor="@color/movie_dark_purple"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/findMoviesButtonView"
        style="@style/FindMoviesButtonView"/>
</RelativeLayout>
