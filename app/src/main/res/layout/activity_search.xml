<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            layout="@layout/logo_layout" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="center|bottom"
            style="@style/SearchTitleTextView" />

    </LinearLayout>

    <View
        android:id="@+id/lineSeparatorView"
        android:layout_below="@id/titleLayout"
        style="@style/UnderlineView" />


    <LinearLayout
        android:id="@+id/ratingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_below="@+id/lineSeparatorView"
        style="@style/TableLayoutView">

        <TextView
            android:layout_height="match_parent"
            style="@style/RatingTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/seekBarView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/RatingSeekBarView"/>

            <TextView
                android:id="@+id/seekbarResultTextView"
                android:text="0"
                android:gravity="center|right"
                style="@style/SeekBarResultTextView" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/releaseDateLayout"
        android:layout_below="@+id/ratingLayout"
        android:orientation="horizontal"
        style="@style/TableLayoutView">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                style="@style/StartReleaseDate"/>

            <Button
                android:id="@+id/startReleaseDateButtonView"
                style="@style/DatePickerButtonView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                style="@style/EndReleaseDate"/>

            <Button
                android:id="@+id/endReleaseDateButtonView"
                style="@style/DatePickerButtonView"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/votesCountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/releaseDateLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/TableLayoutView">

            <TextView
                android:layout_gravity="bottom"
                style="@style/VotesCountTextView"/>

            <EditText
                android:id="@+id/votesCountEditTextView"
                android:layout_marginTop="5dp"
                style="@style/VoteCountEditTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/TableLayoutView">

            <TextView
                style="@style/GenreTextView"/>

            <Button
                android:id="@+id/genreButtonView"
                style="@style/GenreButtonView"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/findMoviesButtonView"
        style="@style/FindMoviesButtonView"/>
</RelativeLayout>
