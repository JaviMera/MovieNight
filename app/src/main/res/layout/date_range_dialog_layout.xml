<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textSize="18sp"
            android:gravity="center"
            style="@style/StartReleaseDate" />

        <DatePicker
            android:id="@+id/startDateRangePickerView"
            android:datePickerMode="spinner"
            style="@style/DatePickerView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textSize="18sp"
            android:gravity="center"
            style="@style/EndReleaseDate" />

        <DatePicker
            android:id="@+id/endDateRangePickerView"
            android:datePickerMode="spinner"
            style="@style/DatePickerView" />

    </LinearLayout>

    <Button
        android:id="@+id/dateRangeDoneButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        style="@style/DialogButtonView"/>

</LinearLayout>