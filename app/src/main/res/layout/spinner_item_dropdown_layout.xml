<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/genreDescriptionDropdownTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start"
        android:padding="@dimen/input_view_left_margin"
        android:textColor="@color/movie_dark_purple"
        android:textSize="@dimen/input_view_text_size" />

    <CheckBox
        android:id="@+id/genreCheckBoxView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
